# ComercioYA Platform - Development Environment Variables
# Copy this file to .env.local and adjust values as needed

# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://ventalocal:ventalocal2024@localhost:5432/ventalocal

# Redis Cache
REDIS_URL=redis://localhost:6380

# Authentication
JWT_SECRET=dev-secret-key-change-in-production-2024
JWT_EXPIRES_IN=7d

# MercadoPago Integration
MP_ACCESS_TOKEN=test_token
MP_WEBHOOK_SECRET=your-webhook-secret

# API Configuration
API_PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# File Storage (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=ventalocal
MINIO_SECRET_KEY=ventalocal2024
MINIO_BUCKET=ventalocal-files
MINIO_USE_SSL=false

# Search Engine (MeiliSearch)
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_KEY=ventalocal_master_key_2024

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ventalocal.com

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true

# Security
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Development Features
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Image Processing
SHARP_CACHE_SIZE=50
SHARP_CONCURRENCY=4

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5