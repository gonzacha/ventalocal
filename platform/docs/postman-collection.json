{
  "info": {
    "name": "ComercioYA Platform API",
    "description": "Complete API collection for ComercioYA Platform - Multi-tenant eCommerce, CRM & ERP",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "tenantId",
      "value": "demo",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "eCommerce",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Get Products - With Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products?page=1&limit=10&search=auriculares&category=electronica&featured=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": "auriculares"
                },
                {
                  "key": "category",
                  "value": "electronica"
                },
                {
                  "key": "featured",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Product",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/auriculares-bluetooth",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "auriculares-bluetooth"]
            }
          }
        },
        {
          "name": "Create Order - Cash",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cliente@example.com\",\n  \"name\": \"Juan Pérez\",\n  \"phone\": \"+54911234567\",\n  \"paymentMethod\": \"CASH\",\n  \"shippingMethod\": \"standard\",\n  \"shippingAddress\": {\n    \"street\": \"Av. Corrientes 1234\",\n    \"city\": \"Buenos Aires\",\n    \"state\": \"CABA\",\n    \"zip\": \"C1043\",\n    \"country\": \"AR\"\n  },\n  \"items\": [\n    {\n      \"productId\": \"product-id-here\",\n      \"quantity\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Create Order - MercadoPago",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cliente@example.com\",\n  \"name\": \"María González\",\n  \"phone\": \"+54911234567\",\n  \"paymentMethod\": \"MERCADOPAGO\",\n  \"shippingMethod\": \"express\",\n  \"shippingAddress\": {\n    \"street\": \"Av. Santa Fe 5678\",\n    \"city\": \"Buenos Aires\",\n    \"state\": \"CABA\",\n    \"zip\": \"C1025\",\n    \"country\": \"AR\"\n  },\n  \"items\": [\n    {\n      \"productId\": \"product-id-here\",\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@demo.local\",\n  \"password\": \"demo1234\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
